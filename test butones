import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Graphics;
import java.awt.Image;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import javax.swing.*;  
import static javax.swing.JFrame.EXIT_ON_CLOSE;
class Sample extends JFrame implements ActionListener {//inheriting JFrame  
      
    private PanelPrincipal pp;
    private JLabel expen;
    private JLabel pooh;
    Sample(){  
        pp= new PanelPrincipal();
        
        JButton e=new JButton("COMPRAR");//create button
        e.setBounds(600,250,100, 30);
        e.addActionListener(this);
        JButton a=new JButton("COCACOLA");
        a.setBounds(600,160,80, 20); 
        a.addActionListener(this);
        JButton b=new JButton("SPRITE");
        b.setBounds(605,230,80, 20);  
        JButton c=new JButton("FANTA");
        c.setBounds(605,250,80, 20);  
        JButton d=new JButton("MINE");  
        d.setBounds(605,270,80, 20);  
        JButton r=new JButton("VUELTO");
        r.setBounds(600,350,100, 40);
        JButton f=new JButton("PREGUNTAR");
        f.setBounds(100,400,150, 40);
        add(f);
        add(e);
        add(r);
        add(a);//adding button on frame 
        add(b);
        add(c);
        add(d);

        
        ImageIcon img= new ImageIcon("expen.jpg");
        ImageIcon img1= new ImageIcon("pooh.jpg");
        JLabel imagen= new JLabel();
        JLabel imagen1= new JLabel();
        imagen.setBounds(350,50,400,500);
        imagen.setIcon(new ImageIcon(img.getImage().getScaledInstance(400,500,Image.SCALE_SMOOTH)));
        expen=imagen;
        add(expen);
        imagen1.setBounds(100,200,150,200);
        imagen1.setIcon(new ImageIcon(img1.getImage().getScaledInstance(150,200,Image.SCALE_SMOOTH)));
        pooh=imagen1;
        add(pooh);
        
        setLayout(null);
        add(pp,BorderLayout.CENTER);
        setSize(800,600);  

        setDefaultCloseOperation(EXIT_ON_CLOSE);
        setVisible(true);  
    }  
    public void actionPerformed(ActionEvent e) {
        if("COMPRAR" == e.getActionCommand() ){
            pooh.setBounds(200,200,200,200);
        }

        if("COCACOLA" == e.getActionCommand()){
            pooh.setBounds(0,0,200,200);
        }

    }
}
class PanelPrincipal extends JPanel{
    public PanelPrincipal(){
        setSize(1000,800); //para que se inicie con un tama√±o
        setBackground(Color.white);
    }
}

public class Codigo2 {
    public static void main(String[] args) {
         new Sample();
         new PanelPrincipal();
         
    }
    
}
